%br/
%h1.alt Page List
%hr/

%table
  %th Page Name
  %th Page Url
  %th Content Type
  %th Published
  - @pages.each do |page|
    %tr
      %td= link_to page.title, page_path(page)
      %td= link_to page.url, page.url
      %td= page.content_type
      %td= page.published

%hr/
= link_to "Create New Page", new_page_path, :class => "button positive"
